include ../../globals/data
include ../../globals/mixins


mixin b-header(menuList, languagesList, socialList, classes)
	+b.header(class=classes)
		+e.container
			+e.menu
				+e('svg').menu-icon.open(id="menu-icon")
					use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#menu'))
				+e('span').menu-text Меню
			+e.logo
				+e('img').logo-left-b(src='assets/i/logo-left-black.png')
				+e('img').logo-left-w(src='assets/i/logo-left-white.png')
				+e('img').logo-right-b(src='assets/i/logo-right-black.png')
				+e('img').logo-right-w(src='assets/i/logo-right-white.png')
			+e.icons
				+b-icons(socialList)
		+e.burger(id='burger')
			+e.languages
				+b-languages(languagesList)
			+e.menu
				+b-menu(menuList)
			+e('p').email eqlagency@gmail.com
			+e('p').phone +38 050 571 69 06
			+e.icons
				+b-icons(socialList)