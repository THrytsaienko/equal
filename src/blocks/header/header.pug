include ../../globals/mixins.pug

mixin b-header(classes)
	+b.header(class=classes)
		+e.container
			+e.menu
				+b-menu()
			+e.logo
				+e('img').logo-left-b(src='assets/i/logo-left-black.png')
				+e('img').logo-left-w(src='assets/i/logo-left-white.png')
				+e('img').logo-right-b(src='assets/i/logo-right-black.png')
				+e('img').logo-right-w(src='assets/i/logo-right-white.png')
			+e.social-icons
				+e('svg').icon._facebook
					use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#facebook'))
				+e('svg').icon._instagram
					use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#instagram'))
				+e('svg').icon._cross
					use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#cross'))
		+e.burger(id='burger')
			+b('ul').languages
				+e('li').ru ру
				+e('li').ua укр
				+e('li').en en
				