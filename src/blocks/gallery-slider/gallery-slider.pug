include ../../globals/data
include ../../globals/mixins

mixin b-gallery-slider(gallerySlider)
	+b.gallery-slider
		+e.container
			+e.slides
				each item in gallerySlider
					+e.slide(class= item.className)
						+e('a').link(href= item.href)
							+e.info
								+e('p').category= item.category
								+e('h2').text= item.text
		+e.container
			+e.data
				+e.albums 24 Альбома
				+e.arrows
					+e('svg').button-prev(id="arrow-left")
						use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#chevron-thin-left'))
					+e('svg').button-next(id="arrow-right")
						use(xlink:href=asset('svg/symbol/svg/sprite.symbol.svg#chevron-thin-right'))